<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_item_menu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <View
        android:id="@+id/v_item_menu_indicator"
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:background="@color/yellow_ffa"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_item_menu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/avenir_next_cyr_500"
        android:paddingStart="25dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="@color/blue_1b1"
        android:textSize="16sp"
        tools:text="Home" />

</LinearLayout>